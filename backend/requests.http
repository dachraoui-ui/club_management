POST {{baseUrl}}/trainings
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "title": "Football Practice",
  "date": "2024-02-10T00:00:00Z",
  "time": "09:00",
  "duration": "2 hours",
  "discipline": "Football",
  "coachId": "COACH_ID_HERE",
